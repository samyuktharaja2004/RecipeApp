<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6AB43A"
                android:endColor="#357E3E"
                android:angle="90" />         <!-- Vertical gradient -->
            <corners android:radius="50dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#90B346"
                android:endColor="#DCE973"
                android:angle="90" />         <!-- Vertical gradient -->
            <corners android:radius="50dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>