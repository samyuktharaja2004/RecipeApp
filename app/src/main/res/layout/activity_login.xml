<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">


    <!-- Login Button at the bottom of the screen -->

    <!-- Align to the bottom -->

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="414dp"
        android:layout_height="0dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="#000000"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#C5E1A5"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/etPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintWidth_default="spread" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="404dp"
        android:layout_height="60dp"
        android:backgroundTint="#000000"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawableEnd="@drawable/baseline_remove_red_eye_24"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#F7121212"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="316dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="244dp"
        android:layout_height="93dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/gradient_button"
        android:text="LOGIN"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="83dp" />

    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="395dp"
        android:layout_height="78dp"
        android:layout_marginTop="64dp"
        android:text="Donâ€™t have an account? Sign up"
        android:textColor="#0D0C0C"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>